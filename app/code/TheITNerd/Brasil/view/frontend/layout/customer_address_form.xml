<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="customer.address.form.masks" template="TheITNerd_Brasil::customer/address/masks.phtml" >
                <arguments>
                    <argument name="region_provider" xsi:type="object">Magento\Customer\ViewModel\Address\RegionProvider</argument>
                </arguments>
            </block>
        </referenceContainer>


        <referenceBlock name="customer_address_edit">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">TheITNerd_Brasil::Magento/Customer/address/edit.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
